<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/personListCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:id="@+id/actionListItemCircleIv"
        android:src="@drawable/account_default"
        android:scaleType="fitCenter"
        app:riv_corner_radius="30dip"
        app:riv_border_width="2dip"
        app:riv_border_color="@color/start"
        app:riv_mutate_background="true"
        app:riv_tile_mode="repeat"
        app:riv_oval="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/actionListItemCircleIv"
        android:layout_toEndOf="@+id/actionListItemCircleIv"
        android:id="@+id/actionListItemNameTv"
        android:gravity="start"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/actionListItemTimeTv"
        android:layout_below="@+id/actionListItemNameTv"
        android:layout_toRightOf="@+id/actionListItemCircleIv"
        android:layout_toEndOf="@+id/actionListItemCircleIv"
        android:gravity="start"/>

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/actionListItemDayTv"
                android:gravity="start"
                android:layout_below="@+id/actionListItemTimeTv"
                android:layout_toRightOf="@+id/actionListItemCircleIv"
                android:layout_toEndOf="@+id/actionListItemCircleIv" />

            <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                android:id="@+id/actionListItemDateTv"
        android:gravity="start"
                android:layout_below="@+id/actionListItemDayTv"
                android:layout_toRightOf="@+id/actionListItemCircleIv"
                android:layout_toEndOf="@+id/actionListItemCircleIv" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>